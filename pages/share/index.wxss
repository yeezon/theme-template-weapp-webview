  height: 512px;
  visibility: hidden;
  position: absolute;
  top: -1000%;
  left: -1000%;
}
.canvas {
  visibility: hidden;
  position: absolute;
  top: -1000%;
  right: -1000%;
}

.cont {
  display: flex;
  align-items: center;
  justify-content: center;
  height: calc(100vh - 330rpx);
}

.share-img {
  display: block;
  width: auto;
  height: auto;
  max-width: 80%;
  max-height: 80%;
}

.save {
  position: fixed;
  display: flex;
  align-items: center;
  justify-content: center;
  left: 0;
  bottom: 0;
  padding: 0 0 130rpx;
  width: 100%;
  line-height: 0;
}

/* 小程序奇葩去边框 */
.btn::after{ border: none; }

.btn {
  display: block;
  margin: 0;
  padding: 0;
  width: 60%;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 50rpx;
  font-size: 32rpx;
  border: none;
  color: #fff;
  background-color: #1AAD16;
  font-weight: bold;
  text-align: center;
  outline: none;
}
.btn.i-link,
.btn.i-link ~ .btn.i-img {
  margin: 0 2%;
  width: 40%;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 45rpx;
  font-size: 30rpx;
}
.btn.i-link {
  background-color: #f5871f;
}
