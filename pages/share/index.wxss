/* Model  */

.confirm-model {
  position: fixed;
  top: 35%;
  left: 50%;
  width: 80%;
  border-radius: 8rpx;
  background: #fff;
  overflow: hidden;
  transform: translate(-50%);
  z-index: 998;
}

.confirm-model .title {
  display: flex;
  width: 100%;
  height: 100rpx;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #262626;
  border-bottom: 1rpx solid #eee;
}

.confirm-model .content {
  display: flex;
  align-items: center;
  padding: 50rpx;
  font-size: 28rpx;
  color: #666;
}

.confirm-model .content .text {
  flex: 1;
}

.confirm-model .content::before {
  content: '';
  display: inline-flex;
  width: 15rpx;
  height: 15rpx;
  margin-right: 10rpx;
  border-radius: 100%;
  background: #999;
}

.confirm-model .bottom {
  display: flex;
  border-top: 1rpx solid #eee;
  box-sizing: border-box;
}

.confirm-model .bottom button {
  flex: 1;
  height: 88rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  border: none;
  font-size: 30rpx;
  border-radius: 0;
  color: #333;
  border-right: 1rpx solid #eee;
  background: #fff;
}

.confirm-model .bottom button.confirm-btn {
  color: #fe384f;
}

.confirm-model .bottom button:last-child {
  border-right: none;
}

.confirm-model .bottom button::after {
  border: none;
}

/* End Model  */


